{
  "name": "elm-review",
  "version": "2.0.1",
  "description": "Run elm-review from Node.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "flow": "flow",
    "test": "npm run elm-tests && xo && npm run flow && npm run test-init",
    "elm-tests": "(cd template/ && elm make src/Elm/Review/Main.elm --output=/dev/null) && (cd template/ && elm-test)",
    "test-init": "rm -rf test-init && mkdir test-init && cd test-init && echo Y | elm init && echo Y | ../bin/elm-review init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfmengels/node-elm-review.git"
  },
  "bin": {
    "elm-review": "bin/elm-review"
  },
  "files": [
    "bin/",
    "lib/",
    "template/src/**/*.elm",
    "template/elm.json",
    "DefaultReviewConfig.elm"
  ],
  "keywords": [
    "elm",
    "review",
    "elm-review",
    "lint",
    "linter",
    "elm-lint",
    "check",
    "cli"
  ],
  "author": "Jeroen Engels",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/jfmengels/node-elm-review/issues"
  },
  "homepage": "https://github.com/jfmengels/node-elm-review#readme",
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "promise/prefer-await-to-then": "off"
    }
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "chokidar": "^3.3.1",
    "cross-spawn": "^7.0.1",
    "elm-json": "^0.2.6",
    "find-up": "^4.1.0",
    "folder-hash": "^3.3.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.4",
    "got": "^10.7.0",
    "minimist": "^1.2.0",
    "node-elm-compiler": "^5.0.4",
    "prompts": "^2.2.1",
    "strip-ansi": "^6.0.0",
    "which": "^2.0.2",
    "wrap-ansi": "^6.2.0"
  },
  "devDependencies": {
    "elm": "^0.19.1-3",
    "elm-test": "^0.19.1-revision2",
    "eslint": "^6.2.2",
    "flow-bin": "^0.122.0",
    "xo": "^0.28.2"
  }
}
