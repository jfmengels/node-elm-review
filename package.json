{
  "name": "node-elm-lint",
  "version": "1.0.0-beta.2",
  "description": "Run elm-lint from Node.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "flow": "flow",
    "test": "xo && npm run flow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfmengels/node-elm-lint.git"
  },
  "bin": {
    "elm-lint": "bin/elm-lint"
  },
  "keywords": [
    "elm",
    "lint",
    "elm-lint",
    "cli"
  ],
  "author": "Jeroen Engels",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/jfmengels/node-elm-lint/issues"
  },
  "homepage": "https://github.com/jfmengels/node-elm-lint#readme",
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "promise/prefer-await-to-then": "off"
    }
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "cross-spawn": "^6.0.5",
    "elm-json": "^0.2.1",
    "find-up": "^4.1.0",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.4",
    "minimist": "^1.2.0",
    "node-elm-compiler": "^5.0.4",
    "prompts": "^2.2.1",
    "which": "^1.3.1"
  },
  "devDependencies": {
    "eslint": "^6.2.2",
    "flow-bin": "^0.102.0",
    "xo": "^0.24.0"
  }
}
