{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NO_COLOR", "LOCAL_ELM_REVIEW_SRC"],
  "globalPassThroughEnv": ["AUTH_GITHUB", "ELM_HOME"],
  "tasks": {
    "elm-format": {
      "inputs": [
        "ast-codec/**/*.elm",
        "init-templates/**/*.elm",
        "parseElm/**/*.elm",
        "review/**/*.elm",
        "template/**/*.elm",
        "!**/elm-stuff/*"
      ],
      "outputs": [
        "ast-codec/**/*.elm",
        "init-templates/**/*.elm",
        "parseElm/**/*.elm",
        "review/**/*.elm",
        "template/**/*.elm"
      ]
    },
    "testing": {
      "dependsOn": [
        "elm-tests",
        "elm-format",
        "tsc",
        "eslint-check",
        "prettier-check",
        "test-sync"
      ]
    },
    "testing:offline": {
      "dependsOn": [
        "elm-tests",
        "elm-format",
        "tsc",
        "eslint-check",
        "prettier-check",
        "jest"
      ]
    },
    "test-sync": {
      "env": ["CI", "REMOTE"],
      "inputs": [
        "ast-codec/",
        "bin/",
        "init-templates/",
        "lib/",
        "new-package/",
        "parseElm/",
        "review/",
        "template/",
        "test/",
        "vendor/"
      ],
      "cache": false
    },
    "eslint-check": {
      "inputs": ["lib/", "vendor/", ".eslintrc.js", "tsconfig.json"]
    },
    "eslint-fix": {
      "inputs": [
        "lib/",
        "new-package/elm-review-package-tests/**/*.js",
        "test/",
        "vendor/",
        ".eslintrc.js"
      ],
      "outputs": [
        "lib/",
        "new-package/elm-review-package-tests/**/*.js",
        "test/"
      ]
    },
    "js-check": {
      "dependsOn": ["eslint-check", "prettier-check"]
    },
    "js-fix": {
      "dependsOn": ["eslint-fix", "prettier-fix"]
    },
    "prettier-check": {
      "inputs": [
        "*.js",
        "*.ts",
        "*.json",
        "*.md",
        ".prettierrc.json",
        ".prettierignore"
      ],
      "outputs": ["./node_modules/.cache/prettier/.prettier-cache"]
    },
    "prettier-fix": {
      "inputs": [
        "*.js",
        "*.ts",
        "*.json",
        "*.md",
        ".prettierrc.json",
        ".prettierignore"
      ],
      "outputs": [
        "*.js",
        "*.ts",
        "*.json",
        "*.md",
        ".prettierrc.json",
        "./node_modules/.cache/prettier/.prettier-cache"
      ]
    },
    "tsc": {
      "inputs": [
        "lib/",
        "new-package/elm-review-package-tests/**/*.js",
        "test/",
        "jest.config.js",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "tsc-watch": {
      "inputs": [
        "lib/",
        "new-package/elm-review-package-tests/**/*.js",
        "test/",
        "jest.config.js",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"],
      "cache": false,
      "persistent": true
    },
    "elm-tests": {
      "inputs": ["template/**/*.elm", "ast-codec/**/*.elm", "!**/elm-stuff/*"]
    },
    "jest": {
      "inputs": ["lib/", "test/"],
      "cache": false
    },
    "test-run": {
      "env": ["CI", "REMOTE"],
      "inputs": [
        "ast-codec/",
        "bin/",
        "init-templates/",
        "lib/",
        "new-package/",
        "parseElm/",
        "review/",
        "template/",
        "test/",
        "vendor/"
      ],
      "cache": false
    },
    "test-run-record": {
      "env": ["CI", "REMOTE"],
      "inputs": [
        "ast-codec/",
        "bin/",
        "init-templates/",
        "lib/",
        "new-package/",
        "parseElm/",
        "review/",
        "template/",
        "test/",
        "vendor/"
      ],
      "outputs": ["test/run-snapshots/*.txt"],
      "cache": false
    },
    "prepare": {},
    "check-engines": {
      "inputs": ["package.json"]
    }
  }
}
